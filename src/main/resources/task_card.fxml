<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo.presentation.main.TaskCardController"
      fx:id="taskCard"
      style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;"
      spacing="5">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label fx:id="titleLabel"/>
    <Label fx:id="descriptionLabel"/>
    <Label fx:id="deadlineLabel"/>
    <Label fx:id="workerLabel"/>
    <Label fx:id="priorityLabel"/>
    <Label fx:id="statusLabel"/>
</VBox>