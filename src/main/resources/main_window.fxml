<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Pos?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.presentation.main.MainController">

    <top>
        <HBox fx:id="topPanel" spacing="10" alignment="CENTER_LEFT"  >
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="profileButton" mnemonicParsing="false" text="Мой профиль" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" promptText="Поиск..." HBox.hgrow="ALWAYS" />
            <Button fx:id="menuButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="☰" />
        </HBox>
    </top>

    <center>
        <TabPane fx:id="tabPane">
            <tabs>
                <Tab text="Проекты" closable="false">
                    <content>
                        <fx:include source="task_container.fxml"/>
                    </content>
                </Tab>
                <Tab text="Мои задачи" closable="false">
                    <content>
                        <fx:include source="sortable_task_list.fxml"/>
                    </content>
                </Tab>
                <Tab text="Статистика" closable="false">
                    <content>
                        <Label text="Содержимое третьей вкладки"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <StackPane fx:id="bottomRightButton" alignment="BOTTOM_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="addWindowButton" text="+" onAction="#showCreateWindowDialog"/>
        </StackPane>
    </bottom>

</BorderPane>
